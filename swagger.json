{
  "openapi": "3.0.3",
  "info": {
    "title": "in.orbit",
    "version": "1.0.0"
  },
  "components": {
    "schemas": {}
  },
  "paths": {
    "/goals": {
      "post": {
        "operationId": "createGoal",
        "tags": [
          "goals"
        ],
        "description": "Create a goal",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "title": {
                    "type": "string"
                  },
                  "desiredWeeklyFrequency": {
                    "type": "integer",
                    "minimum": 1,
                    "maximum": 7
                  }
                },
                "required": [
                  "title",
                  "desiredWeeklyFrequency"
                ],
                "additionalProperties": false
              }
            }
          },
          "required": true
        },
        "responses": {
          "201": {
            "description": "Default Response",
            "content": {
              "application/json": {
                "schema": {
                  "enum": [
                    "null"
                  ],
                  "nullable": true
                }
              }
            }
          }
        }
      }
    },
    "/completions": {
      "post": {
        "operationId": "createCompletion",
        "tags": [
          "completions"
        ],
        "description": "Complete a goal",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "goalId": {
                    "type": "string"
                  }
                },
                "required": [
                  "goalId"
                ],
                "additionalProperties": false
              }
            }
          },
          "required": true
        },
        "responses": {
          "201": {
            "description": "Default Response",
            "content": {
              "application/json": {
                "schema": {
                  "enum": [
                    "null"
                  ],
                  "nullable": true
                }
              }
            }
          }
        }
      }
    },
    "/pending-goals": {
      "get": {
        "operationId": "getPendingGoals",
        "tags": [
          "goals"
        ],
        "description": "Get pending goals",
        "responses": {
          "200": {
            "description": "Default Response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "pendingGoals": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "id": {
                            "type": "string"
                          },
                          "title": {
                            "type": "string"
                          },
                          "desiredWeeklyFrequency": {
                            "type": "number"
                          },
                          "completionCount": {
                            "type": "number"
                          }
                        },
                        "required": [
                          "id",
                          "title",
                          "desiredWeeklyFrequency",
                          "completionCount"
                        ],
                        "additionalProperties": false
                      }
                    }
                  },
                  "required": [
                    "pendingGoals"
                  ],
                  "additionalProperties": false
                }
              }
            }
          }
        }
      }
    },
    "/summary": {
      "get": {
        "operationId": "getWeekSummary",
        "tags": [
          "goals"
        ],
        "description": "Get completed goals in a specific week",
        "responses": {
          "200": {
            "description": "Default Response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "summary": {
                      "type": "object",
                      "properties": {
                        "completed": {
                          "type": "number"
                        },
                        "total": {
                          "type": "number"
                        },
                        "goalsPerDay": {
                          "type": "object",
                          "additionalProperties": {
                            "type": "array",
                            "items": {
                              "type": "object",
                              "properties": {
                                "id": {
                                  "type": "string"
                                },
                                "title": {
                                  "type": "string"
                                },
                                "completedAt": {
                                  "type": "string"
                                }
                              },
                              "required": [
                                "id",
                                "title",
                                "completedAt"
                              ],
                              "additionalProperties": false
                            }
                          }
                        }
                      },
                      "required": [
                        "completed",
                        "total",
                        "goalsPerDay"
                      ],
                      "additionalProperties": false
                    }
                  },
                  "required": [
                    "summary"
                  ],
                  "additionalProperties": false
                }
              }
            }
          }
        }
      }
    }
  }
}